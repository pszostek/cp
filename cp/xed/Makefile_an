all: xed.py _xed.so tests_build

tests:
	cd tests && ./run.sh

tests_build:
	$(MAKE) -C tests

_xed.so: xed_disass.c xed_wrap.cxx xed_disass.h
	g++ -ggdb -O3 -std=c++11 -fPIC xed_disass.c xed_wrap.cxx xed_bb_chop.cxx -I/data/andrzejn/local/include/python2.7 -I. -I.. -I../include -L../../lib -lxed -shared -o _xed.so

xed_wrap.cxx xed.py: xed.i
	/data/andrzejn/local/bin/swig -I.. -I../include -Dinline= -Wall -python -c++ xed.i	 

xed-ex1: xed-ex1.o
	g++  -fopenmp  -o xed-ex1 xed-ex1.c ../lib/libxed.a

xed-ex2: xed-ex2.o
	g++  -fopenmp  -o $@ @< ../lib/libxed.a

xed-ex2.o: xed-ex2.cpp
	g++ -fopenmp -I../include -c @<	

.PHONY: clean tests_build

clean:
	rm -rf xed-ex2 xed-ex2.o xed_wrap.cxx _xed.so xed.py *.pyc *.o xed_bb_chop xed_bb_chop2
	$(MAKE) -C tests clean
